doctype html
html.no-js(lang="ru-RU")
  head
    meta(charset="UTF-8")
    title Nerds
    link(rel="stylesheet" href="css/style.css")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto")
    link(rel="stylesheet" href="css/normalize.css")
  body
    header.header
      nav.header__nav
        a.header__logo(href="index.html")
          include ../../image/svg-image/nerds-logo.svg
        ul.header__list.nav
          li.nav__item
            a.nav__link(href="#") Студия
          li.nav__item
            a.nav__link(href="#") Клиенты
          li.nav__item
            a.nav__link.nav__link--active Магазин
          li.nav__item
            a.nav__link(href="#") Контакты
        a.header__cart.nav__link(href="#")
          include ../../image/svg-image/cart-icon.svg
          | Корзина
    main.main
      .main__wrapper-title
        h1.main__title Магазин готовых шаблонов
      .main__wrapper-catalog
        form.main__filters.filters
          fieldset.filters__filter-fieldset.filter-fieldset
            legend.filter-fieldset__title Стоимость
            div.filter-fieldset__field
              div.filter-fieldset__line.slider
                div.filter-fieldset__range.bar
                  h3.visually-hidden Кнопки выбора диапазона цены
                button.filter-fieldset__btn-min.filter-btn.lp(type="button" data-pos="0.1") кнопка от
                button.filter-fieldset__btn-max.filter-btn.rp(type="button" data-pos="0.8") кнопка до
            .filter-fieldset__input-rate
              label.filter-fieldset__signature--uppercase от
                input.filter-fieldset__rate(type="number" value="0")
              label.filter-fieldset__signature--uppercase до
                input.filter-fieldset__rate(type="number" value="15000")
          fieldset.filters__filter-fieldset.filter-fieldset
            legend.filter-fieldset__title Сетка:
            label.filter-fieldset__signature
              input.visually-hidden(type="radio" name="grid" checked)
              span.filter-fieldset__radio-indicator
              | Адаптивная
            label.filter-fieldset__signature
              input.visually-hidden(type="radio" name="grid")
              span.filter-fieldset__radio-indicator
              | Фиксированная
            label.filter-fieldset__signature
              input.visually-hidden(type="radio" name="grid")
              span.filter-fieldset__radio-indicator
              | Резиновая
          fieldset.filters__filter-fieldset.filter-fieldset
            legend.filter-fieldset__title Особенности:
            label.filter-fieldset__signature
              input.visually-hidden(type="checkbox" name="slider" checked)
              span.filter-fieldset__checkbox-indicator
              | Слайдер
            label.filter-fieldset__signature
              input.visually-hidden(type="checkbox" name="advantages")
              span.filter-fieldset__checkbox-indicator
              | Блок преимуществ
            label.filter-fieldset__signature
              input.visually-hidden(type="checkbox" name="news" checked)
              span.filter-fieldset__checkbox-indicator
              | Новости
            label.filter-fieldset__signature
              input.visually-hidden(type="checkbox" name="gallery")
              span.filter-fieldset__checkbox-indicator
              | Галерея
            label.filter-fieldset__signature
              input.visually-hidden(type="checkbox" name="cart")
              span.filter-fieldset__checkbox-indicator
              | Корзина
          button.filters__button.button--grey(type="button") Показать
        .main__wrapper-content
          section.main__sorting.sorting
            h3.sorting__title Сортировать:
            ul.sorting__list
              li.sorting__item
                button.sorting__button.sorting__button--active по цене
              li.sorting__item
                button.sorting__button по типу
              li.sorting__item
                button.sorting__button по названию
              li.sorting__item
                button.sorting__button.button-triangle
                  span.button-triangle__img.button-triangle__img--active.button-triangle__bottom
                  |стрелка вверх
              li.sorting__item
                button.sorting__button.button-triangle
                  span.button-triangle__img.button-triangle__top
                  |стрелка вниз
          section.main__projects.projects
            ul.projects__list
              li.projects__item
