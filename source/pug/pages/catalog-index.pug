                  span.project__description--background
              li.projects__item
                article.projects__blok.project
                  .project__head
                    <svg width="70" height="20">
                    <circle r="7" cx="10" cy="50%" fill="white"/>
                    <circle r="7" cx="33" cy="50%" fill="white"/>
                    <circle r="7" cx="56" cy="50%" fill="white"/>
                    </svg>
                  img.project__image(src="image/img-aplus.jpg" width="360" height="576" alt="A Plus")
